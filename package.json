{
  "name": "approved-by-action",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write 'src/*.ts'",
    "format-check": "prettier --check 'src/*.ts'",
    "package": "ncc build --license licenses.txt",
    "lint": "eslint {tests,src}/**/*.ts",
    "test": "jest",
    "ci": "npm run test && npm run lint && npm run format-check && npm run build && npm run package",
    "release": "npm run test && npm run lint && npm run format && npm run build && npm run package"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@kie/mock-github": "^1.0.0",
    "@octokit/openapi-types": "^16.0.0"
  },
  "devDependencies": {
    "@octokit/rest": "^19.0.5",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.33.0",
    "eslint-plugin-jest": "^27.2.0",
    "jest": "^29.4.1",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.5"
  }
}
